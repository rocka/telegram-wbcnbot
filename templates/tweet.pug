mixin pictureContent
    div.picture
        each url in picture
            img(src=url)

mixin videoContent
    div.video
        each url in video
            video(src=url controls)

.tweet
    p.tweet_user
        img.user_avatar(src=user.avatar)
        span &nbsp;
        span.user_name !{user.name}
    .tweet_content
        div
            != content.html
        case type
            when 'picture'
                +pictureContent()
            when 'video'
                +videoContent()
